  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arrowrowe/mailgun-util/issues"
  },
  "homepage": "https://github.com/arrowrowe/mailgun-util",
  "devDependencies": {
    "chai": "3.3.0",
    "eslint": "1.6.0",
    "ghooks": "0.3.2",
    "istanbul": "0.3.22",
    "mocha": "2.3.3",
    "sinon": "1.17.1"
  },
  "dependencies": {
    "log4js": "0.6.27",
    "needle": "0.10.0"
  },
  "config": {
    "ghooks": {
